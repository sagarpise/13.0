<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="footer_style_3" inherit_id="website.footer_custom" name="Footer Style 3" active="False">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="oe_structure oe_structure_solo" t-if="not no_footer">
                <section class="s_text_block pt48 pb36">
                    <div class="container">
                        <div class="row">
                            <div class="col-6 col-lg-4 mb-4">
                                <h6 class="mb-3">
                                    Categories
                                </h6>
                                <ul class="list-unstyled">
                                    <li class="my-2">
                                        <a href="#">Athletic Apparel</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Sneakers &amp; Athletic</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Sunglasses &amp; Eyewear</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Jeans</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">T-Shirts</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Swimwear</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Clogs &amp; Mules</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Bags</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Sandals</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Belts</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Hats</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Jewelry</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-6 col-lg-4 mb-4">
                                <h6 class="mb-3">
                                    Account Info
                                </h6>
                                <ul class="list-unstyled">
                                    <li class="my-2">
                                        <a href="#">Your account</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Refunds &amp; replacements</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Order tracking</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Delivery info</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Taxes &amp; fees</a>
                                    </li>
                                </ul>
                                <h6 class="mt-4 mb-3">
                                    Useful Links
                                </h6>
                                <ul class="list-unstyled">
                                    <li class="my-2">
                                        <a href="#">Blog</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Community</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Forums</a>
                                    </li>
                                    <li class="my-2">
                                        <a href="#">Pricing and Plans</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-12 col-lg-4 mb-4">
                                <h6 class="mb-3">
                                    Contacts
                                </h6>
                                <t t-call="theme_prime.component_company_info"/>
                                <h6 class="mt-4 mb-3">
                                    Subscribe
                                </h6>
                                <div class="input-group js_subscribe w-75" data-list-id="0">
                                    <input type="email" name="email" class="js_subscribe_email form-control bg-transparent" placeholder="Your Email..."/>
                                    <span class="input-group-append">
                                        <a role="button" href="#" class="btn btn-primary js_subscribe_btn" aria-label="Send"><i class="fa fa-send-o"/></a>
                                        <a role="button" href="#" class="btn btn-success js_subscribed_btn d-none" disabled="disabled">Thanks</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('o_footer_copyright')]" position="replace">
            <div class="o_footer_copyright">
                <div class="container py-4">
                    <div class="row py-4 tp-delivery-info">
                        <div class="col-12 col-lg-6 col-xl-3">
                            <div class="media">
                                <span class="lnr lnr-rocket fa-2x text-alpha"/>
                                <div class="media-body pl-3">
                                    <h6>Fast and free delivery</h6>
                                    <p>Free delivery for all orders</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 col-xl-3">
                            <div class="media">
                                <span class="lnr lnr-undo fa-2x text-alpha"/>
                                <div class="media-body pl-3">
                                    <h6>Money back guarantee</h6>
                                    <p>We return money within 30 days</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 col-xl-3">
                            <div class="media">
                                <span class="lnr lnr-phone fa-2x text-alpha"/>
                                <div class="media-body pl-3">
                                    <h6>24/7 customer support</h6>
                                    <p>Friendly 24/7 customer support</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 col-xl-3">
                            <div class="media">
                                <span class="lnr lnr-cloud-upload fa-2x text-alpha"/>
                                <div class="media-body pl-3">
                                    <h6>Secure online payment</h6>
                                    <p>We process SSL —Åertificate</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row py-4 justify-content-between">
                        <div class="col-12 col-lg-auto text-center text-lg-left">
                            <a href="/">
                                <span t-field="website.logo_footer" t-options="{'widget': 'image', 'class': 'logo'}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name" />
                            </a>
                            <ul class="list-inline d-sm-inline-block mt-2 mt-sm-0 ml-sm-3">
                                <t t-call="theme_prime.component_language"/>
                            </ul>
                            <ul class="list-inline my-3">
                                <li class="list-inline-item mx-2"><a href="#">Home</a></li>
                                <li class="list-inline-item mx-2"><a href="#">About Us</a></li>
                                <li class="list-inline-item mx-2"><a href="#">Contact Us</a></li>
                                <li class="list-inline-item mx-2"><a href="#">Privacy Policy</a></li>
                                <li class="list-inline-item mx-2"><a href="#">Terms of Use</a></li>
                            </ul>
                        </div>
                        <div class="col-12 col-lg-auto text-center text-lg-right">
                            <t t-call="theme_prime.component_social_share">
                                <t t-set="_classes" t-value="'list-inline tp-followus-icon m-0'"/>
                            </t>
                            <t t-call="theme_prime.component_payment_icons">
                                <t t-set="_classes" t-value="'my-3'"/>
                            </t>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center text-lg-left">
                            <span>Copyright &amp;copy;</span> <span t-field="res_company.name" itemprop="name">Company name</span>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
