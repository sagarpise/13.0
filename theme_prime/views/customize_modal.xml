<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="user_navbar" inherit_id="website.user_navbar">
        <xpath expr="//a[@id='theme_customize']" position="attributes">
            <attribute name="id">d_theme_customize</attribute>
        </xpath>
    </template>

    <template id="theme_customize" inherit_id="website.theme_customize">
        <xpath expr="//content[last()]" position="after">
            <content id="theme_customize_content_headers" string="Headers" title="Choose your header style">
                <list string="Header Style" data-col="12">
                    <opt string="Default" data-reload="/" data-xmlid=""/>
                    <opt string="Header 1" data-reload="/" data-xmlid="theme_prime.header_style_1, theme_prime.option_header_style_1, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 2" data-reload="/" data-xmlid="theme_prime.header_style_2, theme_prime.option_header_style_2, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 3" data-reload="/" data-xmlid="theme_prime.header_style_3, theme_prime.option_header_style_3, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 4" data-reload="/" data-xmlid="theme_prime.header_style_4, theme_prime.option_header_style_4, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 5" data-reload="/" data-xmlid="theme_prime.header_style_5, theme_prime.option_header_style_5, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 6" data-reload="/" data-xmlid="theme_prime.header_style_6, theme_prime.option_header_style_6, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 7" data-reload="/" data-xmlid="theme_prime.header_style_7, theme_prime.option_header_style_7, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 8" data-reload="/" data-xmlid="theme_prime.header_style_8, theme_prime.option_header_style_8, theme_prime.portal_show_sign_in"/>
                    <opt string="Header 9" data-reload="/" data-xmlid="theme_prime.header_style_9, theme_prime.option_header_style_9, theme_prime.portal_show_sign_in"/>
                </list>
                <list string="Header Options" data-col="12">
                    <opt data-widget="color" data-color="preheader" string="Pre-Header Color"/>
                    <opt data-widget="color" data-color="menu" string="Navbar Color"/>
                    <checkbox>
                        <opt string="Hide Pre-Header (if any)" data-xmlid="theme_prime.option_disable_preheader" data-reload="/"/>
                    </checkbox>
                    <checkbox>
                        <opt string="Hide search category dropdown (if any)" data-xmlid="theme_prime.option_category_dropdown" data-reload="/"/>
                    </checkbox>
                    <checkbox>
                        <opt string="Show logged user avatar in header" data-xmlid="theme_prime.option_show_user_avatar" data-reload="/"/>
                    </checkbox>
                </list>
            </content>
            <content id="theme_customize_content_footers" string="Footers" title="Choose your footer style">
                <list string="Footer Style" data-col="12">
                    <opt string="Default" data-reload="/" data-xmlid=""/>
                    <opt string="Footer 1" data-reload="/" data-xmlid="theme_prime.footer_style_1, theme_prime.option_footer_style_1"/>
                    <opt string="Footer 2" data-reload="/" data-xmlid="theme_prime.footer_style_2, theme_prime.option_footer_style_2"/>
                    <opt string="Footer 3" data-reload="/" data-xmlid="theme_prime.footer_style_3, theme_prime.option_footer_style_3"/>
                    <opt string="Footer 4" data-reload="/" data-xmlid="theme_prime.footer_style_4, theme_prime.option_footer_style_4"/>
                    <opt string="Footer 5" data-reload="/" data-xmlid="theme_prime.footer_style_5, theme_prime.option_footer_style_5"/>
                    <opt string="Footer 6" data-reload="/" data-xmlid="theme_prime.footer_style_6, theme_prime.option_footer_style_6"/>
                    <opt string="Footer 7" data-reload="/" data-xmlid="theme_prime.footer_style_7, theme_prime.option_footer_style_7"/>
                    <opt string="Footer 8" data-reload="/" data-xmlid="theme_prime.footer_style_8, theme_prime.option_footer_style_8"/>
                    <opt string="Footer 9" data-reload="/" data-xmlid="theme_prime.footer_style_9, theme_prime.option_footer_style_9"/>
                </list>
                <list string="Footer Colors" data-col="12">
                    <opt data-widget="color" data-color="footer" string="Footer Color"/>
                </list>
            </content>
            <content id="theme_customize_content_ui" string="Prime UI">
                <list string="Product Label Colors">
                    <opt data-widget="color" data-color="product-label-green" string="Green"/>
                    <opt data-widget="color" data-color="product-label-blue" string="Blue"/>
                    <opt data-widget="color" data-color="product-label-gray" string="Gray"/>
                    <opt data-widget="color" data-color="product-label-red" string="Red"/>
                    <opt data-widget="color" data-color="product-label-orange" string="Orange"/>
                    <opt data-widget="color" data-color="product-label-black" string="Black"/>
                </list>
                <list string="Menu Label Colors">
                    <opt data-widget="color" data-color="menu-label-green" string="Green"/>
                    <opt data-widget="color" data-color="menu-label-blue" string="Blue"/>
                    <opt data-widget="color" data-color="menu-label-gray" string="Gray"/>
                    <opt data-widget="color" data-color="menu-label-red" string="Red"/>
                    <opt data-widget="color" data-color="menu-label-orange" string="Orange"/>
                    <opt data-widget="color" data-color="menu-label-black" string="Black"/>
                </list>
                <list string="Button Styles" data-col="12">
                    <opt data-widget="d_button_widget" string="Default" data-d_btn_style="d_btn_style_default" data-reload="/" data-xmlid=""/>
                    <opt data-widget="d_button_widget" string="Hover 1" data-d_btn_style="d_btn_style_1" data-reload="/" data-xmlid="theme_prime.option_button_style_1"/>
                    <opt data-widget="d_button_widget" string="Hover 2" data-d_btn_style="d_btn_style_2" data-reload="/" data-xmlid="theme_prime.option_button_style_2"/>
                    <opt data-widget="d_button_widget" string="Hover 3" data-d_btn_style="d_btn_style_3" data-reload="/" data-xmlid="theme_prime.option_button_style_3"/>
                    <opt data-widget="d_button_widget" string="Hover 4" data-d_btn_style="d_btn_style_4" data-reload="/" data-xmlid="theme_prime.option_button_style_4"/>
                    <opt data-widget="d_button_widget" string="Hover 5" data-d_btn_style="d_btn_style_5" data-reload="/" data-xmlid="theme_prime.option_button_style_5"/>
                </list>
                <list data-col="12">
                    <checkbox>
                        <opt string="Show back to top button" data-xmlid="theme_prime.option_back_to_top_button" data-reload="/"/>
                    </checkbox>
                    <checkbox>
                        <opt string="Enable rounded corners for UI?" data-xmlid="theme_prime.option_ui_rounded" data-reload="/"/>
                    </checkbox>
                </list>
            </content>
        </xpath>
    </template>

    <!-- Headers -->
